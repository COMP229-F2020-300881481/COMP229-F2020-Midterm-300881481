<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<main class="container" style="margin-top: 50px;">
  <form method="POST" action="/book-list/edit/<%=book._id%>">
    <h1 style="margin-bottom: 20px;">Edit Book</h1>
    <div class="form-group">
      <label>Title</label>
      <input name="name" class="form-control" value="<%=book.name%>" />
    </div>
    <div class="form-group">
      <label>Author</label>
      <input name="author" class="form-control" value="<%=book.author%>" />
    </div>
    <div class="form-group">
      <label>Year Published</label>
      <input name="published" class="form-control" value="<%=book.published%>" />
    </div>
    <div class="form-group">
      <label>Description</label>
      <input name="description" class="form-control" value="<%=book.description%>" />
    </div>
    <div class="form-group">
      <label>Price</label>
      <input name="price" class="form-control" value="<%=book.price%>" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</main>

